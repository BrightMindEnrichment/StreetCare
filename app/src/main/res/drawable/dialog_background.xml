<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />
</shape>
