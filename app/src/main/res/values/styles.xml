<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RightRoundButtonStyle">
        <item name="android:background">@drawable/right_round_button</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>
    <style name="LeftRoundButtonStyle">
        <item name="android:background">@drawable/left_round_button</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>
    <style name="RightRoundButtonActivate">
        <item name="android:background">@drawable/green_right_round_button</item>
        <item name="android:textColor">@color/accent_yellow</item>
    </style>
    <style name="LeftRoundButtonActivate">
        <item name="android:background">@drawable/green_left_round_button</item>
        <item name="android:textColor">@color/accent_yellow</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Chapter membership badges -->
    <style name="BadgeContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    <style name="BadgeIconStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="BadgeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>