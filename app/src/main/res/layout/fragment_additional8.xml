<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/visit_log"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="Poppins" />

    <!-- Card View -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visitlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/margin_16dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray700"
        app:strokeWidth="1.2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp">

            <!-- Skip Text -->
            <TextView
                android:id="@+id/txtSkipAdd8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/skip"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/additional_5_8"
                android:textSize="@dimen/text_size16" />

            <!-- Question Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="@string/Additional_question8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"
                app:fontFamily="Poppins" />

            <!-- Scrollable Options -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/AD1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio1"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio2"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio3"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio4"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio6"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio7"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio8"
                        android:textSize="@dimen/text_size14" />

                    <CheckBox
                        android:id="@+id/AD5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Radio5"
                        android:textSize="@dimen/text_size14" />

                    <!-- Other TextBox -->
                    <EditText
                        android:id="@+id/edtAD_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/please_specify_here"
                        android:lines="2"
                        android:padding="5dp"
                        android:textSize="@dimen/text_size16"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPreviousAdd8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="@string/Previous"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins" />

                <TextView
                    android:id="@+id/txtNextAdd8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:gravity="end"
                    android:text="@string/next_button"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress Bar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="5dp">

        <!-- Progress bars 1 to 8 -->
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar4"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar5"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar6"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar7"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar8"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <!-- Progress Text -->
    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/progress"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontFamily="Poppins" />
</LinearLayout>
