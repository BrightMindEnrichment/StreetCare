<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- This space pushes content down from the top -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/visit_log_inside"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:fontFamily="Poppins"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_visitlog1"
            android:layout_width="360dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/gray700"
            app:strokeWidth="1.2dp">

            <!-- Card content remains the same -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="278dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:padding="10dp"
                    android:text="@string/Question7a"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:fontFamily="Poppins" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yesbutton"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Yes"
                        android:gravity="center"
                        android:textColor="@color/accent1"
                        android:textFontWeight="600"
                        android:textSize="@dimen/text_size16"
                        app:fontFamily="Poppins" />

                    <View
                        android:layout_width="22dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txt_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nobutton"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="No"
                        android:textColor="@color/gray900"
                        android:textFontWeight="600"
                        android:textSize="@dimen/text_size16"
                        app:fontFamily="Poppins" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="5dp">

            <!-- Progress bars remain the same -->
            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar2"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar3"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar4"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar5"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar6"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:paddingBottom="@dimen/padding_24dp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="@string/progress"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="Poppins"/>

    </LinearLayout>
</ScrollView>