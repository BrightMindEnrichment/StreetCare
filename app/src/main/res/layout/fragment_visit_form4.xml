<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/visit_log"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="Poppins"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visitlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:paddingBottom="@dimen/margin_16dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray700"
        app:strokeWidth="1.2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_skip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="@string/skip"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/page4_of_5"
                android:textSize="@dimen/text_size16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="@string/outreach_quiz4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"
                app:fontFamily="Poppins"/>
                <CheckBox
                    android:id="@+id/CB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Radio1"
                    android:textSize="@dimen/text_size14"/>
                <CheckBox
                    android:id="@+id/CB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Radio2"
                    android:textSize="@dimen/text_size14" />
                <CheckBox
                    android:id="@+id/CB3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size14"
                    android:text="@string/Radio3"/>
                <CheckBox
                    android:id="@+id/CB4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size14"
                    android:text="@string/Radio4" />

                <CheckBox
                android:id="@+id/CB6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Radio6"
                android:textSize="@dimen/text_size14" />

                <CheckBox
                android:id="@+id/CB7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Radio7"
                android:textSize="@dimen/text_size14" />

                <CheckBox
                android:id="@+id/CB8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Radio8"
                android:textSize="@dimen/text_size14" />

                <CheckBox
                    android:id="@+id/CB5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size14"
                    android:text="@string/Radio5" />
            <EditText
                android:id="@+id/edt_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:padding="5dp"
                android:hint="Please specify here"
                android:lines="2"
                android:textSize="@dimen/text_size16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_previous4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="@string/Previous"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins"/>
                <TextView
                    android:id="@+id/txt_next4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_margin="2dp"
                    android:text="@string/next_button"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="5dp">

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar2"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar3"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar4"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar5"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar6"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/progress"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontFamily="Poppins"/>

</LinearLayout>