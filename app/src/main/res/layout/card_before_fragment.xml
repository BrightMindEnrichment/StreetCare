<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_let_someone_know"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1.2dp"
        app:strokeColor="@color/colorSecondary"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_someone_know"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="Poppins"  />

        <ImageView
            android:id="@+id/image_let_someone_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
           android:padding="@dimen/padding_8dp"
            android:src="@drawable/ic_down_arrow"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:id="@+id/linearlayout_let_someone_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone"  >

            <TextView
                android:id="@+id/tv_let_someone_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="13sp"
                android:padding="5dp"
                app:fontFamily="Poppins"
                android:text="@string/before_desc"
                android:textColor="@color/black"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_how_to_prepare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1.2dp"
        app:strokeColor="@color/colorSecondary"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_to_prepare"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="Poppins" />

        <ImageView
            android:id="@+id/image_how_to_prepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_down_arrow"
            tools:ignore="ContentDescription"
            android:padding="@dimen/padding_8dp"/>

        <LinearLayout
            android:id="@+id/linearlayout_how_to_prepare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_how_to_prepare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="13sp"
                android:padding="5dp"
                app:fontFamily="Poppins"
                android:text="@string/before_desc"
                android:textColor="@color/black"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_must_carry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1.2dp"
        app:strokeColor="@color/colorSecondary"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/must_carry"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="Poppins" />

        <ImageView
            android:id="@+id/image_must_carry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/ic_down_arrow"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:id="@+id/linearlayout_must_carry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_marginTop="@dimen/margin_24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_must_carry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="13sp"
                android:padding="5dp"
                app:fontFamily="Poppins"
                android:text="@string/before_desc"
                android:textColor="@color/black"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_plan_an_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1.2dp"
        app:strokeColor="@color/colorSecondary"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_an_intro"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="Poppins"  />

        <ImageView
            android:id="@+id/image_plan_an_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/padding_8dp"
            android:src="@drawable/ic_down_arrow"/>

        <LinearLayout
            android:id="@+id/linearlayout_plan_an_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_plan_an_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="13sp"
                android:padding="5dp"
                app:fontFamily="Poppins"
                android:text="@string/before_desc"
                android:textColor="@color/black"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>


</ScrollView>