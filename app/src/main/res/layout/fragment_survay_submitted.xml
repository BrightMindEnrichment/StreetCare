<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/gray700"
            app:strokeWidth="1.2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.visit.visit_forms.SurveySubmittedFragment"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/thank_you_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/completed_with_exclamation"
            android:textSize="24sp"
            app:fontFamily="Poppins"
            android:layout_margin="@dimen/margin_16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textFontWeight="700"
            android:letterSpacing="0.03"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/gray900"/>
        <Button
            android:id="@+id/btn_another_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/another_visit"
            android:textAllCaps="false"
            android:layout_margin="@dimen/margin_10dp"
            android:textSize="14sp"
            android:textColor="@color/accent1"/>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/Share"
            android:textAllCaps="false"
            android:layout_margin="4sp"
            android:textSize="14sp"
            android:textColor="@color/accent1"/>
        <Button
            android:id="@+id/btn_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/return_home"
            android:layout_margin="4sp"
            android:textColor="@color/accent1"
            android:textAllCaps="false"
            android:textSize="14sp"/>

    </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="300dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:paddingBottom="@dimen/padding_24dp"
            android:layout_marginTop="2sp"
            android:gravity="center"
            android:text="@string/completed"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="Poppins"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>