        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/gray400"
            app:strokeWidth="1dp"
            app:cardCornerRadius="20dp">
