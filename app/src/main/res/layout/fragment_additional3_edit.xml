<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/edit_log_inside"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textFontWeight="700"
        app:fontFamily="Poppins"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visitlog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray700"
        app:strokeWidth="1.2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/margin_8dp"
                android:text="@string/additional_7_7"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16"/>

            <!-- Gray divider line under Question row -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="32dp"
                android:padding="16dp"
                android:text="@string/Additional_question3"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textFontWeight="700"
                android:textAlignment="center"
                app:fontFamily="Poppins" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Yes"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="4dp"
                app:backgroundTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_No"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="4dp"
                app:backgroundTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Maybe"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/maybe"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="4dp"
                app:backgroundTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/dark_green"
                    android:layout_gravity="center_horizontal"
                    android:textFontWeight="500"
                    android:textSize="@dimen/text_size12"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/button_previous"
                    app:fontFamily="Poppins"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@color/accent1"
                    android:textFontWeight="600"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="@dimen/text_size16"
                    android:background="@drawable/button_next"
                    app:fontFamily="Poppins"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>