<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/visit_log"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:fontFamily="Poppins"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visitlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray700"
        app:strokeWidth="1.2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_skip_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="2dp"
                android:text="@string/skip"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="@string/additional_1_8"
                android:textSize="@dimen/text_size16"/>
            <!-- Gray divider line under Question row -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_8dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="How much time did you spend on the outreach?"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"
                app:fontFamily="Poppins"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Hours Dropdown -->
                <FrameLayout
                    android:id="@+id/hoursBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/border_black"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/minutesBox"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.34">

                    <AutoCompleteTextView
                        android:id="@+id/selectHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hours"
                        android:textSize="16sp"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:textColorHint="@color/black"
                        android:background="@android:color/transparent" />
                </FrameLayout>

                <!-- Minutes Dropdown -->
                <FrameLayout
                    android:id="@+id/minutesBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_black"
                    android:padding="8dp"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    app:layout_constraintStart_toEndOf="@id/hoursBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/hoursBox"
                    app:layout_constraintWidth_percent="0.34">

                    <AutoCompleteTextView
                        android:id="@+id/selectMinute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minutes"
                        android:textSize="16sp"
                        android:inputType="none"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:textColorHint="@color/black"
                        android:background="@android:color/transparent" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_previous_add2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/Previous"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins"/>
                <TextView
                    android:id="@+id/txt_next_add2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="@string/next_button"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="Poppins" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="5dp">

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="100"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar2"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar3"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar4"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar5"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar6"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar7"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar8"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"
            android:progress="0"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2sp"
        android:gravity="center"
        android:text="@string/progress"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontFamily="Poppins"/>

</LinearLayout>