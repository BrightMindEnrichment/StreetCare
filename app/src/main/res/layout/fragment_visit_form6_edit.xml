<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textFontWeight="700"
            android:text="@string/edit_log_inside"
            android:textColor="@color/gray900"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="Poppins"
            android:layout_marginTop="30dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_visitlog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="7dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/gray300"
            app:strokeWidth="1.6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="start"
                        android:textFontWeight="400"
                        android:textColor="@color/gray900"
                        android:text="@string/page_5"
                        android:textSize="@dimen/text_size16"/>
                    <TextView
                        android:id="@+id/txtSkipAdd420"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="7dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/skip"
                        android:textStyle="bold"
                        app:fontFamily="Poppins"
                        android:textColor="@color/dark_green"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_btn"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:background="@color/gray300"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/Additional_question11"
                    app:fontFamily="Poppins"
                    android:textColor="@color/gray900"
                    android:textSize="24sp"
                    android:lineSpacingExtra="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textFontWeight="700"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_quiz3"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/decrease_no_of_items"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_btn_background"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_horizontal_rule_24"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/button_image"
                        android:padding="0dp" />

                    <EditText
                        android:id="@+id/edit_box12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="12dp"
                        android:padding="10dp"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:background="@null"
                        android:textColorHint="@color/gray900"
                        android:textStyle="bold"
                        app:fontFamily="Poppins"
                        android:hint="@string/default_value"
                        android:gravity="start"
                        android:textFontWeight="400"
                        android:textSize="24sp" />



                    <ImageButton
                        android:id="@+id/increase_no_of_items"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_btn_background"
                        android:src="@drawable/baseline_add_24"
                        android:layout_marginEnd="12dp"
                        android:padding="0dp"
                        android:contentDescription="@string/button_image"
                        android:scaleType="centerCrop"/>





                </LinearLayout>

                <EditText
                    android:id="@+id/enter_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/description_rectangle_bg"
                    android:hint="@string/enter_notes"
                    android:textSize="15.5sp"
                    android:textColorHint="@color/grey_500"
                    app:fontFamily="Poppins"
                    android:textFontWeight="400"
                    android:gravity="top|start"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:padding="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/txtPreviousAdd420"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/dark_green"
                        android:layout_gravity="center_vertical"
                        android:textFontWeight="500"
                        android:textSize="@dimen/text_size12"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/button_previous"
                        app:fontFamily="Poppins"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtNextAdd420"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textColor="@color/accent1"
                        android:textFontWeight="600"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textSize="@dimen/text_size16"
                        android:background="@drawable/button_next"
                        app:fontFamily="Poppins"/>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>