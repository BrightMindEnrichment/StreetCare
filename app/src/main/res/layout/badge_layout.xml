<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="center"
        app:justifyContent="flex_start">

        <!-- Chapter Leader Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="12dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified_green"
                android:contentDescription="@string/chapter_leader_badge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_leader"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Street Care Hub Leader Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified_blue"
                android:contentDescription="@string/street_care_hub_leader_badge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/street_care_hub_leader"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Chapter Member Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="12dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified_purple"
                android:contentDescription="@string/chapter_member_badge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_member"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Account Holder Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="12dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified_yellow"
                android:contentDescription="@string/account_holder_badge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_holder"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="4dp"/>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>
