<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.visit.visit_forms.VisitFormFragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_8dp"
            android:text="@string/page3_of_4"
            android:textSize="@dimen/text_size24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/outreach_experience"
                android:textSize="@dimen/text_size24"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_satisfied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray400"
                    android:drawableTop="@drawable/ic_baseline_sentiment_very_satisfied_24"
                    android:drawablePadding="@dimen/padding_8dp"
                    android:padding="@dimen/padding_8dp"
                    android:text="@string/satisfied"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray400"
                    android:drawableTop="@drawable/ic_baseline_sentiment_neutral_24"
                    android:drawablePadding="@dimen/padding_8dp"
                    android:padding="@dimen/padding_8dp"
                    android:text="@string/neutral"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_dissatisfied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray400"
                    android:drawableTop="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
                    android:drawablePadding="@dimen/padding_8dp"
                    android:padding="@dimen/padding_8dp"
                    android:text="@string/dissatisfied"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_24dp"
                android:textSize="@dimen/text_size24"
                android:text="@string/question_or_comment"/>
            <EditText
                android:id="@+id/comments_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:padding="@dimen/margin_8dp"
                android:layout_marginHorizontal="@dimen/margin_8dp"
                android:inputType="text|textMultiLine|textCapSentences"
                android:gravity="start"
                android:singleLine="false"
                android:hint="@string/hint_feedback"
                android:textCursorDrawable="@color/gray300"
                android:textSize="@dimen/text_size24"
                android:background="@drawable/edit_text_rounded_corner" />

            <Button
                android:id="@+id/btn_submit_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_bottom_72dp"
                android:textAllCaps="false"
                android:text="@string/submit_button"
                android:textSize="@dimen/text_size20" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>

