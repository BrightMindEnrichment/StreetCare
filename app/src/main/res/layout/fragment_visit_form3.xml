<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textFontWeight="700"
            android:text="@string/visit_log"
            android:textColor="@color/gray900"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="Poppins"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_visitlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="7dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/gray300"
            app:strokeWidth="1.6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="start"
                        android:textFontWeight="400"
                        app:fontFamily="Poppins"
                        android:textColor="@color/gray900"
                        android:text="@string/page3_of_5"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/txt_skip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="7dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/skip"
                        android:textStyle="bold"
                        app:fontFamily="Poppins"
                        android:background="@drawable/rounded_btn"
                        android:textColor="@color/dark_green"
                        android:textSize="12sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:background="@color/gray300"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="@string/outreach_quiz3"
                    app:fontFamily="Poppins"
                    android:textColor="@color/gray900"
                    android:textSize="24sp"
                    android:lineSpacingExtra="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textFontWeight="700"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_quiz3"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/decrease_no_of_people"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_btn_background"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/button_image"
                        android:src="@drawable/baseline_horizontal_rule_24"
                        android:scaleType="centerCrop"
                      android:padding="0dp" />

                    <EditText
                        android:id="@+id/et_no_of_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="12dp"
                        android:padding="10dp"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:background="@null"
                        android:textColorHint="@color/gray900"
                        android:textStyle="bold"
                        app:fontFamily="Poppins"
                        android:hint="@string/default_value"
                        android:gravity="start"
                        android:textFontWeight="400"
                        android:textSize="24sp" />


                    
                    <ImageButton
                            android:id="@+id/increase_no_of_people"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="@string/button_image"
                            android:background="@drawable/rounded_btn_background"
                            android:layout_marginEnd="12dp"
                            android:padding="0dp"
                            android:src="@drawable/baseline_add_24"
                            android:scaleType="centerCrop"/>





                </LinearLayout>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    app:fontFamily="Poppins"
                    android:textColor="@color/blue_navy"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="30dp" />

                    <EditText
                        android:id="@+id/description_example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/description_example"
                        android:textSize="15.5sp"
                        android:textColorHint="@color/grey_500"
                        app:fontFamily="Poppins"
                        android:textFontWeight="400"
                        android:gravity="top|start"
                        android:background="@drawable/description_rectangle_bg"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer"
                    android:textSize="14sp"
                    android:textColor="@color/gray700"
                    android:textStyle=""
                    android:gravity="center"
                    android:textFontWeight="600"
                    android:layout_gravity="center"
                    app:fontFamily="Poppins"
                    android:layout_marginTop="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:padding="10dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/txt_previous3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="@string/Previous"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:fontFamily="Poppins"/>
                    <TextView
                        android:id="@+id/txt_next3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:padding="10dp"
                        android:text="@string/next_button"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:fontFamily="Poppins" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="5dp">

            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar2"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar3"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="100"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar4"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="0"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar5"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="0"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/simpleProgressBar6"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:max="100"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="0"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:paddingBottom="@dimen/padding_24dp"
            android:paddingTop="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/progress"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="Poppins"/>

    </LinearLayout>

</ScrollView>