<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text= "@string/edit_log_inside"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textFontWeight="700"
        app:fontFamily="Poppins"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visitlog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray700"
        app:strokeWidth="1.2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="start"
                    android:textFontWeight="400"
                    android:textColor="@color/black"
                    android:text=""
                    android:textSize="16sp"/>


                <TextView
                    android:id="@+id/txt_skip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="end"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/skip"
                    android:textStyle="bold"
                    app:fontFamily="Poppins"
                    android:background="@drawable/rounded_btn"
                    android:textColor="@color/dark_green"
                    android:textSize="12sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:background="@color/gray300"/>


            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="Is there anything future volunteers should know?"
                app:fontFamily="Poppins"
                android:textColor="@color/gray900"
                android:textSize="24sp"
                android:lineSpacingExtra="8dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textFontWeight="700"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/description_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter notes here."
                android:textSize="15.5sp"
                android:textColorHint="@color/grey_500"
                app:fontFamily="Poppins"
                android:textFontWeight="400"
                android:gravity="top|start"
                android:background="@drawable/description_rectangle_bg"
                android:layout_marginTop="7dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_previous3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/dark_green"
                    android:layout_gravity="center_horizontal"
                    android:textFontWeight="500"
                    android:textSize="@dimen/text_size12"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/button_previous"
                    app:fontFamily="Poppins"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_Next3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@color/accent1"
                    android:textFontWeight="600"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="@dimen/text_size16"
                    android:background="@drawable/button_next"
                    app:fontFamily="Poppins"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>